<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/widget_background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2.4">

        <!-- Theory Progress -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ProgressBar
                    android:id="@+id/theory_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="65"
                    android:progressDrawable="@drawable/gradient_ring_theory"/>

                <TextView
                    android:id="@+id/theory_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#E91E63"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="65%"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theory"
                android:textColor="#E91E63"
                android:textSize="10sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Total Progress (Center, Larger) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:layout_width="65dp"
                android:layout_height="65dp">

                <ProgressBar
                    android:id="@+id/total_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="56"
                    android:progressDrawable="@drawable/gradient_ring_total"/>

                <TextView
                    android:id="@+id/total_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#2196F3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="56%"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="#2196F3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Practical Progress -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:gravity="center">

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ProgressBar
                    android:id="@+id/practical_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="45"
                    android:progressDrawable="@drawable/gradient_ring_practical"/>

                <TextView
                    android:id="@+id/practical_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#4CAF50"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="45%"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Practical"
                android:textColor="#4CAF50"
                android:textSize="10sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout> 